<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:weightSum="6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center|right"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="1"
        android:background="#A8A068"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/ac"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#CDCBCB"
            android:onClick="ButtonClick"
            android:text="AC"
            android:textColor="#FD0228"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/fact"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#CDCBCB"
            android:onClick="ButtonClick"
            android:text="x!"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#CDCBCB"
            android:onClick="ButtonClick"
            android:text='←'
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/div"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#CDCBCB"
            android:onClick="ButtonClick"
            android:text="/"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/sept"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#CDCBCB"
            android:onClick="ButtonClick"
            android:text="7"
            android:textColor="#017729"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/huit"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#CDCBCB"
            android:onClick="ButtonClick"
            android:text="8"
            android:textColor="#017729"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/neuf"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#CDCBCB"
            android:onClick="ButtonClick"
            android:text='9'
            android:textColor="#017729"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/mult"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#CDCBCB"
            android:onClick="ButtonClick"
            android:text="*"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/quatre"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#CDCBCB"
            android:onClick="ButtonClick"
            android:text="4"
            android:textColor="#017729"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cinq"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#CDCBCB"
            android:onClick="ButtonClick"
            android:text="5"
            android:textColor="#017729"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#CDCBCB"
            android:onClick="ButtonClick"
            android:text='6'
            android:textColor="#017729"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/moins"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#CDCBCB"
            android:onClick="ButtonClick"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/un"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#CDCBCB"
            android:onClick="ButtonClick"
            android:text="1"
            android:textColor="#017729"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/deux"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#CDCBCB"
            android:onClick="ButtonClick"
            android:text="2"
            android:textColor="#017729"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/trois"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#CDCBCB"
            android:onClick="ButtonClick"
            android:text='3'
            android:textColor="#017729"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#CDCBCB"
            android:onClick="ButtonClick"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#CDCBCB"
            android:onClick="ButtonClick"
            android:text="0"
            android:textColor="#017729"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/point"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#CDCBCB"
            android:onClick="ButtonClick"
            android:text="."
            android:textColor="#017729"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ans"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#CDCBCB"
            android:onClick="ButtonClick"
            android:text="Ans"
            android:textColor="#0041FF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/egal"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#CDCBCB"
            android:onClick="ButtonClick"
            android:text="="
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>